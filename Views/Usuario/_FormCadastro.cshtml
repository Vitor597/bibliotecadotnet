@model Usuario
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" placeholder="Digite um login" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" placeholder="Digite uma senha" class="form-control" required/>
        </div>
        <input type="submit" value="Cadastrar Usuario" class="btn btn-primary"/>
    </form>
</div>